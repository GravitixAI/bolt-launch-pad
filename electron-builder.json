{
  "appId": "com.gravitixai.boltlaunchpad",
  "productName": "Bolt Launch Pad",
  "directories": {
    "output": "release",
    "buildResources": "build"
  },
  "files": [
    "dist/**/*",
    "package.json"
  ],
  "compression": "maximum",
  "asar": true,
  "asarUnpack": [
    "node_modules/better-sqlite3/**/*"
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "icon": "build/icon.ico",
    "artifactName": "${productName}-${version}-${arch}.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "perMachine": false,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "allowElevation": true,
    "installerIcon": "build/icon.ico",
    "uninstallerIcon": "build/icon.ico",
    "deleteAppDataOnUninstall": false,
    "differentialPackage": true
  },
  "publish": {
    "provider": "github",
    "owner": "GravitixAI",
    "repo": "bolt-launch-pad"
  }
}

